<h1>New message to <%= @receiver.nickname %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>
  <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :body, "Message" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :body , rows:8, class: "form-control", placeholder: "Your Message..." %>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit "Send", class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
