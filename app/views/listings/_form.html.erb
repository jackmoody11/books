<%= render "shared/errors", obj: @listing %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@listing, :html => {class: "form-horizontal" , role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :isbn, "ISBN" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :isbn , class: "form-control" , placeholder: "ISBN (10 or 13 digits - no dashes)", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title do %>
        Title <span class="required">&#10033;</span>
        <% end %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title , class: "form-control" , placeholder: "Title of book" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :author, "Author" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :author , class: "form-control" , placeholder: "Author's Name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :condition do %>
          Condition <span class="required">&#10033;</span>
        <% end %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:condition,["New", "Used - Like New", "Used - Very Good", "Used - Good", "Used - Acceptable"] ,{:"data-style" => "form-control", :"data-size" => "5"}, {class: "selectpicker", title: "Condition", multiple: false, :"data-max-options" => "1"}) %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label "Department(s)" %>
      </div>
        <div class="col-sm-8">
          <%= f.collection_select(:category_ids, Category.all.order('name ASC'), :id, :name,{:"data-style" => "form-control", :"data-size" => "5"}, {class: "selectpicker", title: "Choose Department(s)", multiple: true, :"data-max-options" => "3"}) %>
        </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label "Class(es)" %>
      </div>
        <div class="col-sm-8">
          <%= f.collection_select(:course_ids, Course.all.order('shortname ASC'), :id, :shortname,{:"data-style" => "form-control", :"data-size" => "5"}, {class: "selectpicker", title: "Choose Class(es)", multiple: true, :"data-max-options" => "3"}) %>
        </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :price do %>
          Price <span class="required">&#10033;</span>
        <% end %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :price , class: "form-control" , placeholder: "Price (in $USD)" %>
      </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description , rows:8, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
      <div class="form-file-upload is-fileinput">
        <div class="control-label col-sm-2">
          <%= f.label :image %>
        </div>
        <div class="col-sm-8">
            <%= f.file_field :image %>
          </div>
        </div>
      </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
    </div>
  <%end%>
</div>
