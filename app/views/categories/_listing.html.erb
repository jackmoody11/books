<div class="col-md-8 col-md-offset-2">
      <div class="table-responsive">
      <table class="table">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Condition</th>
                  <th class="text-right">Price</th>
                  <th class="text-right">Actions</th>
              </tr>
          </thead>
          <tbody>
            <% @category_listings.each do |listing| %>
              <tr>
                  <td><%= truncate(listing.title, length: 30) %></td>
                  <td><%= listing.condition %></td>
                  <td class="text-right">$ <%= listing.price %></td>
                  <td class="td-actions text-right">
                    <a href="<%= listing_path(listing) %>">
                      <button type="button" rel="tooltip" class="btn btn-primary" data-original-title="" title="">
                          <i class="material-icons">list</i>
                      </button>
                    </a>
                      <% if current_user == listing.user || current_user.admin? %>
                        <a href="<%= edit_listing_path(listing) %>"
                          <button type="button" rel="tooltip" class="btn btn-success" data-original-title="" title="">
                              <i class="material-icons">edit</i>
                          </button>
                        </a>
                        <%= link_to listing_path(listing), method: :delete, data: {confirm: 'Are you sure you want to delete this listing?'} do %>
                          <button type="button" rel="tooltip" class="btn btn-danger" data-original-title="" title="">
                              <i class="material-icons">close</i>
                          </button>
                        <% end %>
                      <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      </div>
    </div>
