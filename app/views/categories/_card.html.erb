<% @category_listings.each_slice(3) do |list_row| %>
<div class="row">
    <% list_row.each do |listing| %>
    <div class="col-md-4">
    <div class="card card-profile card-plain">
      <a href="<%= listing_path(listing) %>">
        <div class="card-image">
          <img class="img" src="<%= listing.image.url %>">
          <div class="card-title">
            $ <%= listing.price %>
          </div>
          <div style="background-image: url(<%= listing.image.card.url %>); opacity: 1;"></div>
          <div class="ripple-container"></div>
      </div>
      </a>
    <a href="<%= listing_path(listing) %>">
      <div class="card-content">
        <h6 class="category text-default"><%= truncate(listing.title, length: 30) %></h6>

        <div class="footer">
          <div class="col-md-6">
            <%= link_to user_path(listing.user) do %>
              <div class="author">
                  <%= small_gravatar_for listing.user, class: "img-circle img-responsive img-raised", align: "left" %>
                     <span><%= show_full_name(listing) %></span>
              </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <p class="card-description">
                <%= listing.condition %>
              </p>
          </div>
        </div>
      </div>
    </a>

    </div>
  </div>
  <% end %>
</div>
<% end %>
