<div class="col-md-8 col-md-offset-2">
      <div class="table-responsive">
      <table class="table">
          <thead>
              <tr>
                  <th>Name</th>
                  <th class="text-right"># of Listings</th>
                  <th class="text-right">Actions</th>
              </tr>
          </thead>
          <tbody>
            <% obj.each do |category| %>
              <tr>
                  <td><%= link_to "#{category.name}", category_path(category) %></td>
                  <td class="text-right"><%= category.listings.count %></td>
                  <td class="td-actions text-right">
                    <a href="<%= category_path(category) %>">
                      <button type="button" rel="tooltip" class="btn btn-primary" data-original-title="" title="">
                          <i class="material-icons">list</i>
                      </button>
                    </a>
                      <% if user_signed_in? && (current_user.admin?) %>
                        <a href="<%= edit_category_path(category) %>"
                          <button type="button" rel="tooltip" class="btn btn-success" data-original-title="" title="">
                              <i class="material-icons">edit</i>
                          </button>
                        </a>
                        <%= link_to category_path(category), method: :delete, data: {confirm: 'Are you sure you want to delete this category?'} do %>
                          <button type="button" rel="tooltip" class="btn btn-danger" data-original-title="" title="">
                              <i class="material-icons">close</i>
                          </button>
                        <% end %>
                      <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      </div>
    </div>
