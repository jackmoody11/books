<%= render 'shared/errors', obj: @course %>
<%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label "Department(s)" %>
  </div>
    <div class="col-sm-8">
      <%= f.collection_select(:category_ids, Category.all, :id, :name,{:"data-style" => "form-control", :"data-size" => "5"}, {class: "selectpicker", title: "Choose Department(s)", multiple: true, :"data-max-options" => "3"}) %>
    </div>
</div>
  <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label :shortname, "Course ID" %>
      </div>
      <div class="col-sm-8">
          <%= f.text_field :shortname, class: "form-control", placeholder: "Course ID (ex: 101H-001)", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
          <%= f.text_field :description, class: "form-control", placeholder: "Course Description (ex: Honors Intro to Economics)", autofocus: true %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
