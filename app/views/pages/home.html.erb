<% content_for :body_class, "landing-page" %>
<% content_for :nav_transparent, true %>
<div class="page-header header-filter homepage" data-parallax="true">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="title">Textbooks Simplified</h1>
        <h2>
          Cutting out the middle man and saving college students $$$ on books!
        <% if !(user_signed_in?) %>
        Come join us.
        </h2>
        <br>
        <%= link_to signup_path,  class: "btn btn-success btn-lg" do %>
        <i class="material-icons">person_add</i>Sign Up
        <% end %>
        <a href="#scrollHome" rel="relanchor" class="btn btn-primary btn-lg">Learn More</a>
        <% end %>
        <% if user_signed_in? %>
        <br />
        <%= link_to "Post Book", new_listing_path, class: "btn btn-success btn-lg" %>
        <%= link_to "Find Books", courses_path, class: "btn btn-primary btn-lg" %>
        <% end %>
      </a>
    </div>
  </div>
</div>
</div>
<div class="main main-raised" id="scrollHome">
  <div class="section text-center">
    <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2 class="title">List Overflow Perks</h2>
        <h5 class="description">
          We make buying books easier, cheaper, and
          less stressful.
        </h5>
      </div>
    </div>
  </div>
    <div class="features">
      <div class="container">
        <div class="row">
        <div class="container">
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-success">
                <i class="material-icons">verified_user</i>
              </div>
              <h4 class="info-title">Verified Users</h4>
              <p>
                All of our users are real students from
                your school.
              </p>
            </div>
          </div>
        <div class="col-md-4">
          <div class="info">
            <div class="icon icon-primary">
              <i class="material-icons">book</i>
            </div>
            <h4 class="info-title">Textbooks Simplified</h4>
            <p>
              Find a person on campus with the book you
              are looking for or use our textbook scraper
              to find you the best deal for all of your books
              in seconds.
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="info">
            <div class="icon icon-danger">
              <i class="material-icons">fingerprint</i>
            </div>
            <h4 class="info-title">Secure</h4>
            <p>
              List Overflow uses secure password hashing to keep your information safe and is completely free to use.
            </p>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
