<div class="page-header header-filter" id="login">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
					<div class="card card-signup">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
							<div class="header header-success text-center">
								<h3 class="card-title">Log in</h3>
							</div>
              <!--Begin card-->
							<div class="card-content">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="material-icons">email</i>
									</span>
									<div class="form-group is-empty">
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email..." %>
                    <span class="material-input"></span>
                  </div>
								</div>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="material-icons">lock_outline</i>
									</span>
									<div class="form-group is-empty">
                    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: "Password..." %>
                    <span class="material-input"></span>
                  </div>
								</div>
                <% if devise_mapping.rememberable? %>
                  <div class="checkbox">
                    <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
                    <% end %>
                  </div>
                <% end %>
							</div>
							<div class="footer text-center">
								<%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary' %>
							</div>
              <%#= render 'devise/shared/links', class: "text-center" %> <!--Need to change this-->
						<% end %>
					</div>
          <!--End card-->
				</div>
			</div>
		</div>
