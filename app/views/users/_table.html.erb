<div class="table-responsive">
  <table class="table">
      <thead>
          <tr>
              <th>Title</th>
              <th class="text-right">Price</th>
              <th class="text-right">Actions</th>
          </tr>
      </thead>
      <tbody>
        <% @user.listings.each do |listing| %>
          <tr>
              <td><%= truncate(listing.title, length: 15) %></td>
              <td class="text-right">$ <%= listing.price %></td>
              <td class="td-actions text-right">
                <%= link_to edit_listing_path(listing) do %>
                  <button type="button" rel="tooltip" class="btn btn-success" data-original-title="" title="">
                      <i class="material-icons">edit</i>
                  </button>
                <% end %>
                <%= link_to listing_path(listing), method: :delete, data: {confirm: 'Are you sure you want to delete this listing?'} do %>
                  <button type="button" rel="tooltip" class="btn btn-danger" data-original-title="" title="">
                      <i class="material-icons">close</i>
                  </button>
                <% end %>
              </td>
          </tr>
<% end %>
      </tbody>
  </table>
  </div>
