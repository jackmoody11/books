<h1 align="center">Edit account</h1>

<%= render "shared/errors", obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@user, :html => {class: "form-horizontal" , role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username , class: "form-control" , placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email  %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email , class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :first_name  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :first_name , class: "form-control", placeholder: "First Name (optional, but recommended)", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :last_name  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :last_name , class: "form-control", placeholder: "Last Name (optional, but recommended)", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :summary  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :summary ,rows: 8, class: "form-control", placeholder: "Tell sellers a little bit about you (optional)", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :grad_year  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :grad_year, class: "form-control", placeholder: "Graduation Year (optional)", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password  %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password , class: "form-control", placeholder: "Enter old password or create a new one", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
          </div>
      </div>
    <%end%>
  </div>
</div>

<div class="col-xs-4 col-xs-offset-4">
  <%= link_to "Cancel request and return to listings page", listings_path %>
</div>
